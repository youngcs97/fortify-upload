<% layout('/layout') %>

<div class="container px-5">
    <div class="d-flex flex-column flex-lg-row align-items-left justify-content-left">
        <a class="btn btn-outline-secondary text-gradient btn-block w-50 p-3" data-bs-toggle="modal" data-bs-target="#errorModal">
            <i class="bi-exclamation-octagon icon-feature text-gradient d-block mb-3"></i> 
            An error occurred.</a>
    </div>
</div>

<!-- Error Modal-->
<div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="errorModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-gradient-primary-to-secondary p-4">
                <h5 class="modal-title font-alt text-white" id="errorModalLabel">Application Error</h5>
                <button class="btn-close btn-close-white" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body border-0 p-4">
                
                <p><%=message%></p>
                <p><%=error.status%></p>
                <pre><%=error.stack%></pre>

            </div>
        </div>
    </div>
</div>